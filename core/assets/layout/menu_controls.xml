<Container
        fillParent="true">
    <Window
            title="@string/menu_controls_window_title">
        <Table>
            <Row>
                <Space
                        width="50"/>
                <Label
                        grow="growX"
                        text="@string/menu_controls_label_keyboard"/>
                <Label
                        grow="growX"
                        text="@string/menu_controls_label_controller"/>
            </Row>
            <Row>
                <Label
                        grow="growX"
                        text="@string/menu_controls_label_up"/>
                <TextButton
                        width="75"
                        name="btn_up_keyboard"/>
                <TextButton
                        width="75"
                        name="btn_up_controller"/>
            </Row>
            <Row>
                <Label
                        grow="growX"
                        text="@string/menu_controls_label_down"/>
                <TextButton
                        width="75"
                        name="btn_down_keyboard"/>
                <TextButton
                        width="75"
                        name="btn_down_controller"/>
            </Row>
            <Row>
                <Label
                        grow="growX"
                        text="@string/menu_controls_label_right"/>
                <TextButton
                        width="75"
                        name="btn_right_keyboard"/>
                <TextButton
                        width="75"
                        name="btn_right_controller"/>
            </Row>
            <Row>
                <Label
                        grow="growX"
                        text="@string/menu_controls_label_left"/>
                <TextButton
                        width="75"
                        name="btn_left_keyboard"/>
                <TextButton
                        width="75"
                        name="btn_left_controller"/>
            </Row>
            <Row>
                <Label
                        grow="growX"
                        text="@string/menu_controls_label_interact"/>
                <TextButton
                        width="75"
                        name="btn_interact_keyboard"/>
                <TextButton
                        width="75"
                        name="btn_interact_controller"/>
            </Row>
            <Row>
                <Label
                        grow="growX"
                        text="@string/menu_controls_label_inventory"/>
                <TextButton
                        width="75"
                        name="btn_inventory_keyboard"/>
                <TextButton
                        width="75"
                        name="btn_inventory_controller"/>
            </Row>
            <Row>
                <Label
                        grow="growX"
                        text="@string/menu_controls_label_menu"/>
                <TextButton
                        width="75"
                        name="btn_menu_keyboard"/>
                <TextButton
                        width="75"
                        name="btn_menu_controller"/>
            </Row>
            <Row>
                <Space/>
                <TextButton
                        name="btn_back"
                        pad="10"
                        width="150"
                        align="center"
                        text="@string/menu_controls_btn_back"/>
                <TextButton
                        name="btn_apply"
                        pad="10"
                        width="150"
                        align="center"
                        text="@string/menu_controls_btn_apply"/>
            </Row>
        </Table>
    </Window>
</Container>