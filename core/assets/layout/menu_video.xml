<Container
        fillParent="true">
    <Window
            title="@string/menu_video_window_title">
        <Row
                pad="10"
                width="250">
            <Label
                    text="@string/menu_video_label_texture_quality"
                    align="right"
            />
            <SelectList
                    name="menu_video_selectbox_texture_quality"
                    align="left"
            />
        </Row>
        <Row
                pad="10"
                width="250">
            <Label
                    text="@string/menu_video_label_fullscreen"
                    align="right"
            />
            <CheckBox
                    name="menu_video_chk_fullscreen"
                    align="left"
            />
        </Row>
        <Row
                pad="10"
                width="250">
            <Label
                    text="@string/menu_video_label_resolution"
                    align="right"
            />
            <SelectList
                    name="menu_video_selectbox_resolution"
                    align="left"
            />
        </Row>
        <Space
                height="25"
        />
        <Row
                width="250">
            <TextButton
                    name="btn_back"
                    pad="10"
                    width="250"
                    align="center"
                    text="@string/menu_video_btn_back"/>
            <TextButton
                    name="btn_apply"
                    pad="10"
                    width="250"
                    align="center"
                    text="@string/menu_video_btn_apply"/>
        </Row>
    </Window>
</Container>