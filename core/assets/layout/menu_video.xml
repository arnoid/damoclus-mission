<Container
        fillParent="true">
    <Window
            name="video_menu_window"
            title="@string/menu_video_window_title">
        <Table>
            <Row
                    pad="10"
                    width="250">
                <Label
                        text="@string/menu_video_label_fullscreen"
                        align="right"
                />
                <CheckBox
                        name="menu_video_chk_fullscreen"
                        align="left"
                />
            </Row>
            <Row
                    pad="10"
                    width="250">
                <Label
                        text="@string/menu_video_label_resolution"
                        align="right"
                />
                <SelectList
                        name="menu_video_selectbox_resolution"
                        align="left"
                />
            </Row>
            <Space
                    height="25"
            />
            <Row
                    width="250">
                <TextButton
                        name="btn_back"
                        pad="10"
                        width="250"
                        align="center"
                        text="@string/menu_video_btn_back"/>
                <TextButton
                        name="btn_apply"
                        pad="10"
                        width="250"
                        align="center"
                        text="@string/menu_video_btn_apply"/>
            </Row>
        </Table>
    </Window>
</Container>